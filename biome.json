{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "linter": {
    "enabled": true,
    "domains": {
      "project": "recommended"
    },
    "rules": {
      "recommended": true,
      "complexity": {
        "noForEach": "on"
      },
      "correctness": {
        "noUnusedVariables": {
          "level": "on",
          "options": {
            "ignoreRestSiblings": true
          }
        }
      },
      "performance": {
        "noBarrelFile": "on",
        "noDelete": "on"
      },
      "style": {
        "noCommonJs": "on",
        "noDefaultExport": "on",
        "noEnum": "on",
        "noUnusedTemplateLiteral": "on",
        "useAtIndex": "on",
        "useCollapsedElseIf": "on",
        "useCollapsedIf": "on",
        "useConsistentArrayType": "on",
        "useFilenamingConvention": "on",
        "useForOf": "on",
        "useShorthandAssign": "on",
        "useNamingConvention": {
          "level": "on",
          "options": {
            "conventions": [
              {
                "selector": {
                  "kind": "objectLiteralProperty"
                },
                "formats": ["camelCase", "PascalCase"]
              }
            ]
          }
        }
      },
      "suspicious": {
        "noEmptyBlockStatements": "on"
      }
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "quoteStyle": "single",
      "trailingCommas": "none",
      "semicolons": "asNeeded",
      "arrowParentheses": "asNeeded"
    }
  },
  "json": {
    "formatter": {
      "enabled": true,
      "trailingCommas": "none",
      "expand": "auto"
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "files": {
    "includes": ["**/*.js", "**/*.ts", "**/*.json"]
  }
}
